<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_sword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="60dip"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/sword" />

    <ImageView
        android:id="@+id/iv_light_circle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_sword"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/light_circle1" />
    <ImageView
        android:id="@+id/iv_light_circle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_below="@id/iv_sword"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/light_circle2" />
    <ImageView
        android:id="@+id/iv_sword_tray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_sword"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:src="@mipmap/sword_tray" />
</RelativeLayout>