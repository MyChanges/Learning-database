<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/valentines_day_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/valentines_day_background">

    <TextView
        android:id="@+id/valentines_day_rose_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80.0dip"
        android:drawableLeft="@mipmap/yacht_sender_dot"
        android:ellipsize="middle"
        android:shadowColor="@color/inke_color_151"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="1.0"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="16.0dip"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/valentines_day_rose_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-10.0dip"
        android:visibility="invisible">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200.0dip"
            android:src="@mipmap/valentines_day_rose" />

        <ImageView
            android:id="@+id/valentines_day_rose_light_a"
            android:layout_width="fill_parent"
            android:layout_height="180.0dip"
            android:layout_marginTop="20.0dip"
            android:src="@mipmap/valentines_day_rose_light_a" />

        <ImageView
            android:id="@+id/valentines_day_rose_light_b"
            android:layout_width="fill_parent"
            android:layout_height="190.0dip"
            android:layout_marginTop="10.0dip"
            android:src="@mipmap/valentines_day_rose_light_b" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/valentines_day_round_light_a"
        android:layout_width="fill_parent"
        android:layout_height="370.0dip"
        android:layout_marginTop="250.0dip"
        android:src="@mipmap/valentines_day_round_light_a"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/valentines_day_round_light_b"
        android:layout_width="370.0dip"
        android:layout_height="130.0dip"
        android:layout_alignTop="@id/valentines_day_round_light_a"
        android:layout_marginTop="30.0dip"
        android:src="@mipmap/valentines_day_round_light_b"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/valentines_day_left_cup_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30.0dip"
        android:visibility="invisible">

        <ImageView
            android:layout_width="197.0dip"
            android:layout_height="226.0dip"
            android:src="@mipmap/valentines_day_left_cup" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/valentines_day_right_cup_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="invisible">

        <ImageView
            android:layout_width="180.0dip"
            android:layout_height="255.0dip"
            android:layout_alignParentRight="true"
            android:src="@mipmap/valentines_day_right_cup" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/valentines_day_cheers_light"
        android:layout_width="37.0dip"
        android:layout_height="42.0dip"
        android:layout_alignTop="@id/valentines_day_left_cup_container"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/valentines_day_cheers_light"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/valentines_day_note_light"
        android:layout_width="145.0dip"
        android:layout_height="210.0dip"
        android:layout_above="@id/valentines_day_cheers_light"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/valentines_day_note_light"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/valentines_day_light_a"
        android:layout_width="171.0dip"
        android:layout_height="195.0dip"
        android:layout_centerInParent="true"
        android:src="@mipmap/valentines_day_light_a"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/valentines_day_light_b"
        android:layout_width="160.0dip"
        android:layout_height="208.0dip"
        android:layout_centerInParent="true"
        android:src="@mipmap/valentines_day_light_b"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/valentines_day_note_a"
        android:layout_width="127.0dip"
        android:layout_height="140.0dip"
        android:layout_marginLeft="80.0dip"
        android:layout_marginTop="160.0dip"
        android:src="@mipmap/valentines_day_note_a"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/valentines_day_note_b"
        android:layout_width="86.0dip"
        android:layout_height="211.0dip"
        android:layout_marginLeft="155.0dip"
        android:layout_marginTop="160.0dip"
        android:src="@mipmap/valentines_day_note_b"
        android:visibility="invisible" />
</RelativeLayout>